@page
@model GuessingGameWithCosmodb.Pages.AllContestsModel

@{
    ViewData["Title"] = "AllContests";
}

<h1>AllContests</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Contest[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contest[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contest[0].WinningNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contest[0].Active)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Contest) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WinningNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                <a asp-page="./Play" asp-route-id="@item.Id">Play</a> |
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
